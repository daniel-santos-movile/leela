#!/usr/bin/make -f
# -*- makefile -*-

PATH        := $(PATH):/usr/local/bin
version      = $(shell ../../src/scripts/read-version.sh)
bin_cabal   ?= cabal

%:
	dh $@

override_dh_auto_clean:
	rm -f ../..//src/warpdrive/cabal.sandbox.config
	rm -r -f ../../src/warpdrive/dist ../../src/warpdrive/.cabal-sandbox
	rm -f debian/*substvars
	dh_clean

override_dh_installinit:
	dh_installinit --no-start

override_dh_auto_build:
	dh_testdir
	cd ../../src/warpdrive; { \
          $(bin_cabal) update; \
          $(bin_cabal) sandbox init; \
          $(bin_cabal) install --only-dependencies; \
          $(bin_cabal) configure -O2; \
          $(bin_cabal) build; \
        }
