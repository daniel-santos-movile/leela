#!/usr/bin/make -f
# -*- makefile -*-


version                 = $(shell ../../src/scripts/read-version.sh)
DEB_HOST_MULTIARCH     ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@

override_dh_auto_clean:
	$(MAKE) -C ../../src/c clean
	rm -f debian/*substvars
	dh_clean

override_dh_install:
	mkdir -p debian/leela-c/usr/include/leela
	mkdir -p debian/leela-c/usr/lib/$(DEB_HOST_MULTIARCH)
	cp -p ../../src/c/src/leela/*.h debian/leela-c/usr/include/leela/
	cp -p ../../src/c/libleela.so* debian/leela-c/usr/lib/$(DEB_HOST_MULTIARCH)/
	dh_install

override_dh_installinit:
	dh_installinit --no-start

override_dh_auto_build:
	$(MAKE) -C ../../src/c build
