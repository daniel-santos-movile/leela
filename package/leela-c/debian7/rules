#!/usr/bin/make -f
# -*- makefile -*-

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ -Dsource -Scmake

override_dh_auto_clean:
	rm -rf source/
	dh_clean

leela_get_source:
	mkdir -p source
	find ../.. -maxdepth 1 -mindepth 1 \! -name package -exec cp -a {} source/ \;

override_dh_auto_configure: leela_get_source
	dh_auto_configure -- "-DLEELA_INSTALL_LIBDIR=$(DEB_HOST_MULTIARCH)/lib"

.PHONY: leela_get_source
