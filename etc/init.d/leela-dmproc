#!/bin/sh

### BEGIN INIT INFO
# Provides:          leela-dmproc
# Required-Start:    $network $local_fs $leela-timeline
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Distributed, real time event processor and monitoring engine
### END INIT INFO

DAEMON=/usr/bin/daemon
SERVICE="$CHDIR/usr/bin/dmproc"
RUNDIR="$CHDIR/var/run/leela"
PIDFILE="$RUNDIR/dmproc.pid"
LOGFILE="$CHDIR/var/log/leela/dmproc.log"
USER=leela
GROUP=leela

DMPROC_DATABUS=${DMPROC_DATABUS:-/tmp/dmproc-databus}
DMPROC_SOCKET=${DMPROC_SOCKET:-/tmp/dmproc-socket}
PARENT_BROADCAST=${PARENT_BROADCAST:-/tmp/timeline-broadcast}

[ -r "${CHDIR}/etc/default/leela-dmproc"    ] && . "${CHDIR}/etc/default/leela-dmproc"
[ -r "${CHDIR}/usr/libexec/leela-functions" ] && . "${CHDIR}/usr/libexec/leela-functions"
leela_test_x "$DAEMON"                      || exit 1
leela_test_x "$SERVICE"                     || exit 1

start_service() {
  leela_daemon_start +RTS -N${DMPROC_THREADS} -RTS -v $DMPROC_OPTS "$DMPROC_DATABUS" "$DMPROC_SOCKET" "$PARENT_BROADCAST"
}

stop_service() {
  leela_generic_stop
  rm -f "$DMPROC_DATABUS" "$DMPROC_SOCKET"
}

case "$1" in
  start)
    start_service
    ;;

  stop)
    stop_service
    ;;

  *)
    echo "Usage: $0 {start|stop}" >&2
    exit 3
    ;;
esac

exit 0
