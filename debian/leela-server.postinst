#!/bin/bash

addgroup --system --quiet leela
adduser --system --quiet --disabled-login --home /var/run/leela --no-create-home --disabled-password --ingroup leela leela

[ -d /var/log/leela ] || { mkdir /var/log/leela; chown -R leela /var/log/leela; }
[ -d /var/run/leela ] || { mkdir /var/run/leela; chown -R leela /var/run/leela; }

exit 0
